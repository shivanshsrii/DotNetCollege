@model UCrud.Models.AddViewModel

<h1>Add Student</h1>

<form method="post" enctype="multipart/form-data">
    <button type="submit" class="btn btn-primary">Save</button>

    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" required />
    </div>

    <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" asp-for="Email" required />
    </div>

    <div class="mt-3">
        <label class="form-label">Phone</label>
        <input type="text" class="form-control" asp-for="Phone" required />
    </div>

    <div class="mt-3">
        <label class="form-label">Course</label>
        <input type="text" class="form-control" asp-for="Course" required />
    </div>

    <div class="mt-3">
        <label class="form-label">Image</label>
        <input type="file" class="form-control" asp-for="ImageFile" required />
    </div>

    <h4 class="mt-4">Semester Marks</h4>

    @for (int i = 1; i <= 8; i++)
    {
        <div class="mt-3">
            <label class="form-label">Semester @i Marks</label>
            <input type="number" class="form-control" asp-for="@(Model.GetType().GetProperty($"Semester{i}").Name)" min="0" max="500" required />
        </div>
    }
</form>
