@model List<UCrud.Models.Entities.Student>

<h1>Students</h1>
<a asp-action="Add" class="btn btn-primary mb-3">Add New Student</a>

<div class="container">
    <div class="row">
        @foreach (var student in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">

                    <img src="@student.ImagePath" alt="Student Image" class="card-img-top img-fluid"
                         style="width: 250px; height: 321px; object-fit: cover; margin: auto;">
                    <div class="card-body text-center">
                        <h5 class="card-title">@student.Name</h5>
                        <p class="card-text"><strong>Email:</strong> @student.Email</p>
                        <p class="card-text"><strong>Phone:</strong> @student.Phone</p>
                        <p class="card-text"><strong>Course:</strong> @student.Course</p>

                        <h6 class="mt-3">Total Marks</h6>
                        @{
                            int totalMarks = student.Semester1 + student.Semester2 + student.Semester3 +
                            student.Semester4 + student.Semester5 + student.Semester6 +
                            student.Semester7 + student.Semester8;
                        }
                        <p class="card-text"><strong>Obtained Marks:</strong> @totalMarks / 4000</p>

                        <a asp-action="Edit" asp-controller="Student" asp-route-id="@student.Id" class="btn btn-primary">Edit</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
